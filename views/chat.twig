<html>
    <head>
        <title>Chat</title>
        <script src="/socket.io/socket.io.js"></script>
    </head>
    <body>
        <script>
            const socket = io.connect("ws://localhost:3000");
            socket.on("msg", (data)=> {
                console.log("data", data);
                p = document.createElement("p");
                p.innerText = data;
                document.body.append(p);
            });
        </script>
    </body>
</html>